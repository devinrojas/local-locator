<h2 class="page-header-text" >Edit <%= resource_name.to_s.humanize %></h2>

<div class="form-tile callout" >
  <h3 class="now-font text-center" > <%= current_user.username %> </h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "form-label-text" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :username, "Username", class: "form-label-text" %>
      <%= f.text_field :username %>
    </div>

    <div class="field">
      <%= f.label :bio, "Bio", class: "form-label-text" %>
      <%= f.text_field :bio %>
    </div>

    <div class="field">
      <%= f.label :avatar, "Change Profile Photo", class: "form-label-text" %>
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <%= f.label :twitter, "Twitter URL", class: "form-label-text" %>
      <%= f.text_field :twitter %>
    </div>

    <div class="field">
      <%= f.label :facebook, "Facebook URL", class: "form-label-text" %>
      <%= f.text_field :facebook %>
    </div>

    <div class="field">
      <%= f.label :website, "Website URL", class: "form-label-text" %>
      <%= f.text_field :website %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form-label-text" %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "form-label-text" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "form-label-text" %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "button" %>
    </div>
    <div class="center" >
      <%= link_to "Back", :back, class: "button secondary text-center" %>
  <% end %>
</div>

</div>